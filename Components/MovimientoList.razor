@using InventarioApp.Models
@using InventarioApp.Services
@inject InventarioService InventarioService
@inject NavigationManager NavigationManager

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Movimientos de Inventario</h2>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" @onclick="AbrirFormularioNuevo">
                <span class="oi oi-plus"></span> Nuevo Movimiento
            </button>
            <button class="btn btn-secondary" @onclick="Volver">
                <span class="oi oi-arrow-left"></span> Volver
            </button>
        </div>
    </div>

    @if (mostrarFormulario)
    {
        <MovimientoForm Movimiento="movimientoEditando" Materiales="materiales" OnSave="GuardarMovimiento" OnCancel="CerrarFormulario" />
    }

    @if (movimientos == null)
    {
        <p><em>Cargando...</em></p>
    }
    else if (movimientos.Count == 0)
    {
        <div class="alert alert-info">
            No hay movimientos registrados. <a href="#" @onclick:preventDefault @onclick="AbrirFormularioNuevo">Crear uno ahora</a>
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="filtroMaterial" class="form-label">Filtrar por Material:</label>
                <select id="filtroMaterial" class="form-control" @onchange="FiltrarPorMaterial">
                    <option value="0">Todos los materiales</option>
                    @foreach (var material in materiales)
                    {
                        <option value="@material.Id">@material.Nombre</option>
                    }
                </select>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Material</th>
                        <th>Tipo</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Total</th>
                        <th>Observaciones</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movimiento in movimientosVisibles)
                    {
                        var material = materiales.FirstOrDefault(m => m.Id == movimiento.MaterialId);
                        <tr>
                            <td>@material?.Nombre</td>
                            <td>
                                @if (movimiento.Tipo == TipoMovimiento.Entrada)
                                {
                                    <span class="badge bg-success">Entrada</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Salida</span>
                                }
                            </td>
                            <td>@movimiento.Cantidad.ToString("F2")</td>
                            <td>@movimiento.Precio.ToString("C")</td>
                            <td><strong>@movimiento.Total.ToString("C")</strong></td>
                            <td>@movimiento.Observaciones</td>
                            <td>@movimiento.Fecha.ToString("g")</td>
                            <td>
                                <button class="btn btn-sm btn-danger" @onclick="() => ConfirmarEliminar(movimiento)">
                                    <span class="oi oi-trash">Eliminar</span>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (mostrarConfirmacion)
    {
        <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirmar Eliminación</h5>
                        <button type="button" class="btn-close" @onclick="CancelarEliminar"></button>
                    </div>
                    <div class="modal-body">
                        ¿Está seguro de que desea eliminar este movimiento? Se revertirán los cambios en el inventario.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelarEliminar">Cancelar</button>
                        <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminacion">Eliminar</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Material> materiales = new();
    private List<Movimiento> movimientos = new();
    private List<Movimiento> movimientosVisibles = new();
    private bool mostrarFormulario = false;
    private bool mostrarConfirmacion = false;
    private Movimiento? movimientoEditando;
    private Movimiento? movimientoAEliminar;
    private int filtroMaterialId = 0;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        materiales = await InventarioService.GetMaterialesAsync();
        movimientos = InventarioService.GetMovimientos();
        AplicarFiltro();
    }

    private void AbrirFormularioNuevo()
    {
        movimientoEditando = new Movimiento();
        mostrarFormulario = true;
    }

    private async Task GuardarMovimiento(Movimiento movimiento)
    {
        await InventarioService.AddMovimientoAsync(movimiento);
        CerrarFormulario();
        await CargarDatos();
    }

    private void CerrarFormulario()
    {
        mostrarFormulario = false;
        movimientoEditando = null;
    }

    private void FiltrarPorMaterial(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int materialId))
        {
            filtroMaterialId = materialId;
            AplicarFiltro();
        }
    }

    private void AplicarFiltro()
    {
        if (filtroMaterialId == 0)
        {
            movimientosVisibles = movimientos.OrderByDescending(m => m.Fecha).ToList();
        }
        else
        {
            movimientosVisibles = movimientos
                .Where(m => m.MaterialId == filtroMaterialId)
                .OrderByDescending(m => m.Fecha)
                .ToList();
        }
    }

    private void ConfirmarEliminar(Movimiento movimiento)
    {
        movimientoAEliminar = movimiento;
        mostrarConfirmacion = true;
    }

    private async Task ConfirmarEliminacion()
    {
        if (movimientoAEliminar != null)
        {
            await InventarioService.DeleteMovimientoAsync(movimientoAEliminar.Id);
            CancelarEliminar();
            await CargarDatos();
        }
    }

    private void CancelarEliminar()
    {
        mostrarConfirmacion = false;
        movimientoAEliminar = null;
    }

    private void Volver()
    {
        NavigationManager.NavigateTo("/materiales");
    }
}
